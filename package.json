{
  "name": "@cinder-studio/quick-firestore",
  "version": "1.4.0",
  "description": "Google supplied Firestore libraries are slow. This is a fast one.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -fr ./lib && tsc",
    "test": "rm -fr ./lib && ./node_modules/.bin/jest",
    "verify": "npm run build && npm run test",
    "prepare": "npm run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "version-patch": "npm version patch",
    "version-minor": "npm version minor",
    "version-major": "npm version major",
    "deploy-npm": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cinder-studio/quick-firestore.git"
  },
  "keywords": [
    "google",
    "firestore",
    "firebase",
    "cloud"
  ],
  "author": "Cinder Studio Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cinder-studio/quick-firestore/issues"
  },
  "homepage": "https://github.com/cinder-studio/quick-firestore#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "jsonwebtoken": "^8.5.1",
    "querystring": "^0.2.1",
    "short-uuid": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "jest": "^27.2.5",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  },
  "files": [
    "lib/**/*"
  ],
  "jest": {
    "verbose": true,
    "rootDir": "./",
    "testMatch": [
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "moduleDirectories": [
      "node_modules",
      "packages"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "globals": {
      "testFilesDir": "./_tests/"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 12,
        "functions": 7.5,
        "lines": 12,
        "statements": 11.3
      }
    }
  },
  "directories": {
    "lib": "lib"
  }
}
